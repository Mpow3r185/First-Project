@model IEnumerable<FirstProject.Models.Patienthistory>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ChronicDiseases)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MedicinesOnRegularBasis)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PreviousVisitsToTheClinicForTheSameReason)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MainComplaint)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SensitivityToAnything)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PreviousExaminations)
