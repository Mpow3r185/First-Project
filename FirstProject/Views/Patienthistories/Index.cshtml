            <th>
                @Html.DisplayNameFor(model => model.Patient)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ChronicDiseases)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MedicinesOnRegularBasis)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PreviousVisitsToTheClinicForTheSameReason)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MainComplaint)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SensitivityToAnything)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PreviousExaminations)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Patient.Patientid)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Patienthistoryid">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Patienthistoryid">Details</a> |
