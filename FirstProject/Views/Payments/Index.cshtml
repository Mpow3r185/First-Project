@model IEnumerable<FirstProject.Models.Payment>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Paymentnumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cvv)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Placeholder)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mm)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Yy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Money)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Paymentnumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cvv)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Placeholder)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mm)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Yy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Money)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Paymentid">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Paymentid">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Paymentid">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
