@model IEnumerable<JoinTable>
@{
    ViewData["Title"] = "Appointment";
    Layout = "/Views/Shared/_DoctorLayout.cshtml";
}
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Admin Dashboard</title>
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="~/AssestDash/images/favicon.png">
    <link href="~/AssestDash/vendor/jqvmap/css/jqvmap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/AssestDash/vendor/chartist/css/chartist.min.css">
    <link href="~/AssestDash/vendor/bootstrap-select/dist/css/bootstrap-select.min.css" rel="stylesheet">
    <link href="~/AssestDash/vendor/bootstrap-datetimepicker/css/bootstrap-datetimepicker.min.css" rel="stylesheet">
    <link href="~/AssestDash/css/style.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&family=Roboto:wght@100;300;400;500;700;900&display=swap" rel="stylesheet">
</head>
<body>
    <div class="content-body">
        <div class="col-lg-12" style="margin-top:25px;">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Appointments</h4>
                </div>
                <form method="post" action="Search">
                    <input type="date" name="startDate" placeholder="Start Date" />
                    <input type="date" name="endDate" placeholder="End Date" />
                    <button type="submit">search</button>

                </form>
                <div class="card-body">
                    <div class="table-responsive">
                       
                        <table class="table table-responsive-md">
                            <thead>
                                <tr>
                                    <th><strong>PATIENT</strong></th>
                                    <th><strong>DR NAME</strong></th>
                                    <th><strong>DATE</strong></th>
                                    <th><strong>Health Case</strong></th>
                                    <th><strong>STATUS</strong></th>
                                    <th></th>
                                </tr>
                            </thead>
                            @foreach (var item in Model)
                            {
                                <tbody>

                                    <tr>
                                        <td>@item.patient.Fname</td>
                                        <td>@item.employee.Fname</td>
                                        <td>@item.appointment.Appointmenttime</td>
                                        <td>@item.appointment.Healthcase</td>
                                        <td><span class="badge light badge-success">@item.appointment.Status</span></td>

                                        <td>
                                            <div class="dropdown">
                                                <button type="button" class="btn btn-success light sharp" data-toggle="dropdown">
                                                    <svg width="20px" height="20px" viewBox="0 0 24 24" version="1.1"><g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd"><rect x="0" y="0" width="24" height="24" /><circle fill="#000000" cx="5" cy="12" r="2" /><circle fill="#000000" cx="12" cy="12" r="2" /><circle fill="#000000" cx="19" cy="12" r="2" /></g></svg>
                                                </button>
                                                <div class="dropdown-menu">



                                                    <a class="dropdown-item" href="/Appointments/Edit/@item.appointment.Appointmentid">Edit</a>

                                                    <a class="dropdown-item" href="/Appointments/Delete/@item.appointment.Appointmentid">Delete</a>

                                                </div>
                                            </div>
                                        </td>
                                    </tr>

                                </tbody>
                            }
                            </table>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
    </body>
