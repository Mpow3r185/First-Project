@model IEnumerable<FirstProject.Models.Appointment>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Healthcase)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Appointmenttime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Emp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Healthcase)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Appointmenttime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Emp.Empid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Patient.Patientid)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Appointmentid">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Appointmentid">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Appointmentid">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
