@{
    var name = ViewBag.Name;
    if (@name != "mh")
        Layout = "/Views/Shared/_HomeLayout.cshtml";
    else
        Layout = "/Views/Shared/_PatientLayout.cshtml";
    ViewData["Title"] = "Index";
}
<section style="margin-top:-160px">
    <div class="container">
        <div class="row slider-text align-items-end">
            <div class="col-md-7 col-sm-12 ftco-animate mb-5">
                <p class="breadcrumbs"><span class="mr-2"><a href="/Home/Index">Home</a></span> <span style="color:ghostwhite">Contact Us</span></p>
                <h1 class="mb-3" style="color:white;opacity:0.8">Contact Us</h1>
            </div>
        </div>
    </div>

</section>
@foreach (var item in @ViewBag.ContactUs)
{

<section class="ftco-section contact-section ftco-degree-bg">
    <div class="container">
        <div class="row d-flex mb-5 contact-info">
            <div class="col-md-12 mb-4">
                <h2 class="h4">Contact Information</h2>
            </div>
            <div class="w-100"></div>
            <div class="col-md-3">
                <p><span>Address:</span> @item.Address</p>
            </div>
            <div class="col-md-3">
                <p><span>Phone:</span> <a href="tel://1234567920">@item.Phonenumber</a></p>
            </div>
            <div class="col-md-3">
                <p><span>Email:</span> <a href="mailto:info@yoursite.com">@item.Email</a></p>
            </div>
            <div class="col-md-3">
                <p><span>Website</span> <a href="/Home/Index">HealthCare.com</a></p>
            </div>
        </div>
        <div class="row block-9">
            <div class="col-md-6 pr-md-5">
                <form action="#">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Your Name">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Your Email">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Subject">
                    </div>
                    <div class="form-group">
                        <textarea name="" id="" cols="30" rows="7" class="form-control" placeholder="Message"></textarea>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Send Message" class="btn btn-primary py-3 px-5">
                    </div>
                </form>

            </div>

            <div class="col-md-6">
                <iframe src="@item.Locationmap" width="500" height="375" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
        </div>
    </div>
</section>


}